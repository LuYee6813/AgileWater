{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node10",
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist/types"
    },
    "include": [
        "src/**/*.ts",
        "tools/**/*.ts"
    ]
}